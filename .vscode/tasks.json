{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Recreate Cmake",
            "type": "shell",
            "command": "clear;cd Build-Linux;rm -rf *; cmake -G \"Unix Makefiles\" -DCMAKE_BUILD_TYPE=Debug ..;time make -j22",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Make Debug",
            "type":"shell",
            "command": "clear;cd Build-Linux;time make -j",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}